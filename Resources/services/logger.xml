<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="mollie_shopware.components.logger.factory"
                 class="MollieShopware\Components\Logger\MollieLoggerFactory">
            <argument type="service" id="mollie_shopware.config"/>
            <argument>%kernel.logs_dir%/mollie_%kernel.environment%.log</argument>
            <argument>14</argument>
        </service>

        <service id="mollie_shopware.components.logger" class="MollieShopware\Components\Logger\MollieLogger" public="true">
            <factory service="mollie_shopware.components.logger.factory" method="createLogger"/>
        </service>

    </services>
</container>